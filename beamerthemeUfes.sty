%% Edit Footnotes at Frames
\setbeamertemplate{footline}{
	\leavevmode%
	\hbox{%
		\begin{beamercolorbox}[wd=.3\paperwidth,ht=3.25ex,dp=1ex,center]{authorfoot}%
			\usebeamerfont{authorfoot}PPGEM/UFES
		\end{beamercolorbox}%
	
		\begin{beamercolorbox}[wd=.4\paperwidth,ht=3.25ex,dp=1ex,center]{authorfoot}%
			\usebeamerfont{titlefoot}\insertsection
		\end{beamercolorbox}%
	
		\begin{beamercolorbox}[wd=.3\paperwidth,ht=3.25ex,dp=1ex,center]{datefoot}%
			\usebeamerfont{datefoot}\today \hspace{0.5cm} \insertframenumber/\inserttotalframenumber
		\end{beamercolorbox}}%
		\vskip0pt%
		}
\makeatletter

